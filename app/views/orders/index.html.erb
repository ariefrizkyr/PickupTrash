<% @orders.each do |order| %>
  <div class="col-md-6 col-md-offset-3 text-center">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="col-sm-12">
          <% if order.status.present? %>
            <span class="glyphicon glyphicon-ok"></span><br>
            <label style="background-color: #2ecc71; color: #ffffff">Telah Dijemput</label>
          <% else %>
            <span class="glyphicon glyphicon-refresh"></span><br>
            <label style="background-color: #f39c12; color: #ffffff">Sedang Dalam Proses</label>
          <% end %>

          <br>

          <% if order.price.present? %>
            <strong>Price:</strong> <%= order.price %><br>
          <% end %>
          <% if order.weight.present? %>
            <strong>Weight:</strong> <%= order.weight %><br>
          <% end %>

          <%= order.created_at.strftime("%Y-%m-%d at %H:%M") %><br><br>

          <%= link_to 'View Detail', order, class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
