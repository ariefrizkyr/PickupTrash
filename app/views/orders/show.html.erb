<div class="col-md-6 col-md-offset-3 text-center">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="col-sm-12">
        <% if @order.status.present? %>
          <span class="glyphicon glyphicon-ok"></span><br>
          <label style="background-color: #2ecc71; color: #ffffff">Telah Dijemput</label>
        <% else %>
          <span class="glyphicon glyphicon-refresh"></span><br>
          <label style="background-color: #f39c12; color: #ffffff">Sedang Dalam Proses</label>
        <% end %>

        <br>

        <strong>Order Time:</strong> <%= @order.created_at.strftime("%d %B %Y at %H:%M") %><br>
        <strong>Address:</strong> <%= @order.address %><br>
        <strong>Direction:</strong> <%= @order.direction %><br>
        <strong>Phone Number:</strong> <%= @order.phone_number %><br>
        <% if @order.price.present? %>
          <strong>Price:</strong> Rp<%= number_with_delimiter(@order.price, delimiter: '.') %><br>
        <% end %>
        <% if @order.weight.present? %>
          <strong>Weight:</strong> <%= @order.weight %><br>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="text-center">
  <%= link_to 'Back', orders_path, class: 'btn btn-success' %>
</div>
