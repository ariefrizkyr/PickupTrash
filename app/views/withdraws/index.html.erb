<% @withdraws.each do |withdraw| %>
  <div class="col-md-6 col-md-offset-3 text-center">
    <div class="panel panel-default">
      <div class="panel-body">
        <% if withdraw.status.present? %>
          <span class="glyphicon glyphicon-ok"></span><br>
          <label style="background-color: #2ecc71; color: #ffffff">Telah Dicairkan</label>
        <% else %>
          <span class="glyphicon glyphicon-refresh"></span><br>
          <label style="background-color: #f39c12; color: #ffffff">Sedang Dalam Proses</label>
        <% end %>
        <br>
        <strong>Withdraw Amount:</strong> <%= withdraw.amount %><br>
        <strong>Withdraw Requested at:</strong> <%= withdraw.created_at.strftime("%Y-%m-%d at %H:%M") %><br>
      </div>
    </div>
    
    <%= link_to 'Back', root_path, class: 'btn btn-success' %>
  </div>
<% end %>
