<%= form_for @withdraw do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>Request Withdraw</h3>
        </div>

        <div class="panel-body">
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.label 'Nominal' %>
                <%= f.text_field :amount, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.submit 'Cairkan Saldo', class: 'btn btn-success' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
