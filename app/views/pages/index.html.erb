<div class="col-md-6 col-md-offset-3 col-sm-12 text-center">
  <% if current_user %>
    <% if current_user.profile.blank? %>
      <h3>Selamat datang di aplikasi Sisaku!</h3>
      <%= link_to 'Create Profile', new_user_profile_path(current_user) %>
    <% else %>
      <div class="row">
        <div class="col-xs-6">
          <%= link_to new_order_path, class:'btn btn-success btn-block btn-lg', role: 'button' do %>
            <span class="glyphicon glyphicon-trash"></span> <br>Pickup Trash</a>
          <% end %>
        </div>

        <div class="col-xs-6">
          <%= link_to orders_path, class: 'btn btn-success btn-block btn-lg', role: 'button' do %>
            <span class="glyphicon glyphicon-list"></span> <br>Pickup List</a>
          <% end %>
        </div>
      </div>
      <hr>

      <div class="row">
        <div class="col-xs-6">
          <%= link_to new_withdraw_path, class:'btn btn-primary btn-block btn-lg', role: 'button' do %>
            <span class="glyphicon glyphicon-transfer"></span> <br>Withdraw</a>
          <% end %>
        </div>

        <div class="col-xs-6">
          <%= link_to withdraws_path, class: 'btn btn-primary btn-block btn-lg', role: 'button' do %>
            <span class="glyphicon glyphicon-credit-card"></span> <br>Withdraw List</a>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="panel panel-default text-center">
      <div class="panel-heading">
        <%= image_tag('logo.png', style: 'width: 80%') %>
      </div>

      <div class="panel-body">
        <%= link_to 'Masuk', new_user_session_path, class: 'btn btn-lg btn-success' %>
        <hr>
        <p>
          Belum punya akun Sisaku?
        </p>
        <%= link_to 'Daftar Sekarang', new_user_registration_path, class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
