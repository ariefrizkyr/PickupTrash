<div class="col-md-6 col-md-offset-3 col-sm-12 text-center">
  <% if current_user %>
    <% if current_user.profile.blank? %>
      <h3>Selamat datang di aplikasi Sisaku!</h3>
      <%= link_to 'Create Profile', new_user_profile_path(current_user) %>
    <% else %>
      <%= link_to 'Create Order', new_order_path, class: 'btn btn-primary' %>
      <%= link_to 'My Orders', orders_path, class: 'btn btn-success' %>

      <hr>

      <%= link_to 'Cairkan saldo', new_withdraw_path, class: 'btn btn-success' %>
      <%= link_to 'Daftar Pencairan', withdraws_path, class: 'btn btn-primary' %>

      <hr>

      <%= link_to 'My Profile', user_path(current_user), class: 'btn btn-success' %>
    <% end %>
  <% else %>
    <div class="panel panel-default text-center">
      <div class="panel-heading">
        <h2>Sisaku</h2>
      </div>

      <div class="panel-body">
        <%= link_to 'Masuk', new_user_session_path, class: 'btn btn-lg btn-success' %>
        <hr>
        <p>
          Belum punya akun Sisaku?
        </p>
        <%= link_to 'Daftar Sekarang', new_user_registration_path, class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
