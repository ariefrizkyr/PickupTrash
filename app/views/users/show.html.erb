<div class="row">
  <div class="col-xs-12">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3 text-center">
        <%= image_tag @user.profile.avatar.url(:medium), class: 'img-circle', style: 'width: 100%' %><br>
        <strong><%= @user.first_name %> <%= @user.last_name %></strong><br>
        <strong>Balance:</strong> Rp<%= number_with_delimiter(@orders.sum(:price) - @withdraws.sum(:amount), delimiter: '.') %><br>
        <strong>Contribution:</strong> <%= @orders.sum(:weight) %> kg
        <br><br>
        <%= link_to 'Edit Profile', edit_user_profile_path(current_user), class: 'btn btn-block btn-green' %>
      </div>
    </div>

    <hr>

    <strong>User Details</strong><br>
    <%= @user.first_name %> <%= @user.last_name %><br>
    <%= @user.profile.address %><br>
    <%= @user.profile.city %><br>
    <%= @user.profile.province %><br>
    <%= @user.profile.phone_number %><br>

    <hr>

    <strong>Bank Details</strong><br>
    <%= @user.profile.bank_name %><br>
    <%= @user.profile.account_name %><br>
    <%= @user.profile.account_number %>
  </div>
</div>

<hr>
<div class="row">
  <div class="col-xs-12 text-center">
    <%= link_to 'Back', root_path, class: 'btn btn-green' %>
  </div>
</div>
